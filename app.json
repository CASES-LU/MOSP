{
    "name": "MOSP",
    "description": "A platform for creating, editing and sharing JSON objects.",
    "keywords": [
        "MOSP",
        "json",
        "json-schema"
    ],
    "website": "https://github.com/CASES-LU/MOSP",
    "repository": "https://github.com/CASES-LU/MOSP",
    "scripts": {
        "postdeploy": [
            "pybabel compile -d mosp/web/translations",
            "python mosp/manager.py db_init",
            "python mosp/manager.py create_admin admin password"
        ]
    },
    "addons": [
        "heroku-postgresql:hobby-dev"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-nodejs"
        },
        {
            "url": "heroku/python"
        }
    ],
    "env": {
        "HEROKU": "1",
        "APPLICATION_SETTINGS": {
            "description": "Configuration file for Heroku",
            "required": true,
            "value": "heroku.cfg"
        }
    }
}
